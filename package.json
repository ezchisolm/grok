{
  "name": "grok",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "bun dist/index.js",
    "deploy": "bun run build && bun dist/deploy-commands.js",
    "postinstall": "curl -L https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -o yt-dlp && chmod +x yt-dlp",
    "test": "vitest"
  },
  "dependencies": {
    "@discordjs/voice": "^0.19.0",
    "@snazzah/davey": "^0.1.9",
    "@upstash/context7-sdk": "^0.1.0",
    "discord.js": "^14.25.1",
    "ffmpeg-static": "^5.2.0",
    "libsodium-wrappers": "^0.7.13"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "^22.10.1",
    "typescript": "^5.6.3",
    "vitest": "^1.3.0"
  }
}
